<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:screenOrientation="portrait"
    tools:context=".activities.MainAct">

    <ImageView
        android:layout_width="330dp"
        android:layout_height="220dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.19999999"
        app:srcCompat="@drawable/logo"
        />

    <Button
        android:id="@+id/btn_main_buscarprossifional"
        android:layout_width="150dp"
        android:layout_height="190dp"
        android:layout_marginStart="16dp"
        android:drawableBottom="@drawable/mainlupa"
        android:fontFamily="@font/averia_gruesa_libre"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:padding="30dp"
        android:text="Buscar Profissionais"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_main_souprossifional"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8" />

    <Button
        android:id="@+id/btn_main_souprossifional"
        android:layout_width="150dp"
        android:layout_height="190dp"
        android:layout_marginEnd="16dp"
        android:drawableBottom="@drawable/mainchavedefenda"
        android:fontFamily="@font/averia_gruesa_libre"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:padding="30dp"
        android:text="Sou um Profissional"
        android:textSize="10sp"
        app:backgroundTint="@color/darkOrange"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8" />
</androidx.constraintlayout.widget.ConstraintLayout>